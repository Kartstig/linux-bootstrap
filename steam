export red="\033[31m"
export yellow="\033[33m"
export green="\033[32m"
export endColor="\033[97m"
export check="✔"
export cross="✘"

LINK_DIR=/kapital/games

set -e

if [[ $EUID -ne 0 ]]; then
  echo -e "[Steam Installer] This script must be run as root"
  exit 1
fi

echo -e "[Steam Installer] Creating steam symlink"
sudo ln -sfv $HOME/.steam $LINK_DIR

sudo add-apt-repository multiverse
sudo apt update
sudo apt install steam

echo -e "${green}[Steam Installer] Done.${endColor}"